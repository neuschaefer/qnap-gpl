
# create a liner array, and add more drives to to.

for e in 0.90 1 1.1 1.2
do
  case $e in
	0.90 ) sz=$mdsize0 ;;
	1 ) sz=$mdsize1 ;;
	1.1 ) sz=$mdsize11 ;;
	1.2 ) sz=$mdsize12 ;;
  esac
  mdadm -CRf $md0 --level linear -e $e --raid-disks=1 $dev1
  testdev $md0 1 $sz 64

  mdadm --grow $md0 --add $dev2
  testdev $md0 2 $sz 64

  mdadm --grow $md0 --add $dev3
  testdev $md0 3 $sz 64

  mdadm -S $md0
done
