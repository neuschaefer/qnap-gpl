include ../../Makedefs.com

CFLAGS	= -c -O -I.. -I../../include $(COPTS)
LDFLAGS	= -G 

all:	minconn.so

minconn.so: minconn.o
	ld -o $@ $(LDFLAGS) -h $@ minconn.o

minconn.o: minconn.c
	$(CC) $(CFLAGS) -c $? 

passprompt.so: passprompt.o
	ld -o $@ $(LDFLAGS) -h $@ passprompt.o

passprompt.o: passprompt.c
	$(CC) $(CFLAGS) -c $?

clean:
	rm -f *.o *.so
